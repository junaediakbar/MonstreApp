<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_mbti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardPreventCornerOverlap="true"
        android:clipToOutline="true"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/img_mbti"
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:layout_margin="12dp"
            android:maxHeight="160dp"
            android:src="@drawable/img_mbti_example" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_mbti_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="16dp"
        android:text="ENFP - A/T"
        android:textAllCaps="true"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/card_mbti"
        app:layout_constraintStart_toStartOf="@+id/card_mbti"
        app:layout_constraintTop_toBottomOf="@+id/card_mbti" />
</androidx.constraintlayout.widget.ConstraintLayout>